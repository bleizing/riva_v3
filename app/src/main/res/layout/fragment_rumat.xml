<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bleizing.riva.fragment.RumatFragment"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp">

            <EditText
                android:id="@+id/edit_search"
                android:layout_width="0dp"
                android:layout_weight="0.9"
                android:layout_height="30dp"
                android:background="@drawable/border_button"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:hint="Cari Lokasi"
                android:textColorHint="@color/colorPrimaryDark"/>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="0.1"
                android:layout_height="30dp"
                android:background="@drawable/gradient_biru_hijau"
                android:gravity="center_horizontal|center_vertical">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/icon_3"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/relative_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/img_rumat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sansumdiabetes"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/img_rumat"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabang Jakarta Timur"
                    android:textColor="@color/hijau"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rosy Klinik Rawamangun"
                    android:textColor="@color/biru_muda"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=">"
                android:textColor="@color/biru_muda"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/montserrat"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_rumat1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/sansumdiabetes"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_toEndOf="@id/img_rumat1"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cabang Jakarta Timur"
                    android:textColor="@color/hijau"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rosy Klinik Pulomas"
                    android:textColor="@color/biru_muda"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:fontFamily="@font/montserrat"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:text=">"
                android:textColor="@color/biru_muda"
                android:textStyle="bold"
                android:textSize="25sp"
                android:fontFamily="@font/montserrat"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>

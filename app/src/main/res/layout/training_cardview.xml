<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="2dp">

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/img_foto_training"
        android:layout_width="125dp"
        android:layout_height="125dp" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_foto_training"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Training Perawatan Luka"
            android:textColor="@color/biru_muda"
            android:textSize="14sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luka Diabetes, Luka Kanker"
            android:textColor="@color/hijau"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Luka Infeksi, Luka Vena, Luka Arteri"
            android:textColor="@color/hijau"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Biaya Rp. 2.500.000/orang"
            android:textColor="@color/cardview_dark_background"
            android:textSize="13sp"
            android:textStyle="bold"
            android:fontFamily="@font/montserrat"/>

    </LinearLayout>

</RelativeLayout>